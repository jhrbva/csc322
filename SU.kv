<MyButton>:


<MyTaboButton>:
    selected: False
    data:''
    text:self.data
    background_color: (0, 0, 0, 1) if self.selected else  (1.0, 0.0, 0.0, 1.0)
    on_press: root.select()


<RVL@RecycleBoxLayout>:
    default_size: None, dp(36)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    spacing: dp(2)


<FileLabel>:
    user:''
    Button:
        text: root.user
        on_press: root.testC()
    Button:
        text:'21'

<Test>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos

    rv1:rv1
    #fileList: fileList
    userNameLabel: userNameLabel
    taboL:taboL
    sugTaboL: sugTaboL

    orientation: 'vertical'
    
    GridLayout:
        height: dp(36)
        size_hint_y:None
        spacing:dp(16)
        rows: 1
        spacing:dp(8)
        Button:
            text:'File'
            on_press:optionChoic.current='file'
            on_press:root.changeUserName()
        Button:
            text:'Tatco Word'
            on_press:optionChoic.current='tacto'
            on_press:root.taboInit()
        Button:
            text:'Membership'
            on_press:optionChoic.current='membership'            
        Button:
            text:'Complaints'
            on_press:optionChoic.current='complaints'
        Label:
            id:userNameLabel
            text: 'ROng'

    ScreenManager:
        id: optionChoic
        Screen:
            name: 'file'
            BoxLayout:
                orientation:'vertical'
                GridLayout:
                    cols: 3
                    rows: 2
                    size_hint_y: None
                    height: dp(108)
                    padding: dp(8)
                    spacing: dp(16)

                    BoxLayout:
                        spacing: dp(8)
                        Button:
                            text: 'File'
                            on_press: root.populate()
                        Button:
                            text: 'Create File'
                            size_hint_x: 0.5

                    Button:
                        text: 'Sort list'
                        on_press: root.sort()
                    Button:
                        text: 'Clear list'
                        on_press: root.clear()

                    BoxLayout:
                        spacing: dp(8)
                        Button:
                            text: 'Insert new item'
                            on_press: root.insert(new_item_input.text)
                        TextInput:
                            id: new_item_input
                            size_hint_x: 0.6
                            hint_text: 'value'
                            padding: dp(10), dp(10), 0, 0

                    BoxLayout:
                        spacing: dp(8)
                        Button:
                            text: 'Update first item'
                            on_press: root.populate()
                        TextInput:
                            id: update_item_input
                            size_hint_x: 0.6
                            hint_text: 'new value'
                            padding: dp(10), dp(10), 0, 0
                    Button:
                        text: 'Remove first item'
                        on_press: root.remove()

                RecycleView:
                    id: fileList
                    data:[]
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(114)
                    bar_width: dp(10)
                    viewclass: 'FileLabel'
                    RVL:

        Screen:
            name:'tacto'
            BoxLayout:
                orientation:'vertical'
                rows:3
                GridLayout:
                    cols: 2
                    rows: 1
                    size_hint_y: None
                    height: dp(50)
                    padding: dp(8)
                    spacing: dp(16)

                    GridLayout:
                        cols:2
                        TextInput:
                            id: searchTaboTI
                            size_hint: 0.8, 1
                            multiline:False
                            on_text: root.searchTaboL()
                        Button:
                            size_hint: 0.2, 1
                            text:'Search'
                            
                    
                    GridLayout:
                        cols:2
                        BoxLayout:
                            TextInput:
                                id:addTaboTI
                                multiline: False
                            Button:
                                text:'Add'
                                on_press: root.addTabo()
                        BoxLayout:
                            Button:
                                text:'Accept'
                                on_press:root.acceptTabo()
                            Button:
                                text:'Remove'
                                on_press:root.removeTabo()

                GridLayout:
                    cols: 2
                    rows: 1
                    size_hint_y: None
                    height: dp(36)
                    padding: dp(8)
                    spacing: dp(16)
                    Label:
                        text:'Tacto List'
                    Label:
                        text:'Suggest List'                    

                GridLayout:
                    cols:2
                    RecycleView:
                        id: taboL
                        data:[]
                        scroll_type: ['bars', 'content']
                        scroll_wheel_distance: dp(114)
                        bar_width: dp(10)
                        viewclass: 'MyTaboButton'
                        RVL:

                    RecycleView:
                        id: sugTaboL
                        data:[]
                        scroll_type: ['bars', 'content']
                        scroll_wheel_distance: dp(114)
                        bar_width: dp(10)
                        viewclass: 'MyTaboButton'
                        RVL:

        Screen:
            name:'membership'
            BoxLayout:
                orientation:'vertical'
                GridLayout:
                    rows:1
                    cols:3
                    height:dp(36)
                    padding:dp(8)
                    Button:
                        text:'OU list'
                    Button:
                        text:'OU Application'
                    Button:
                        text:'Invite OU'            

        Screen:
            name:'complaints'
            BoxLayout:
                orientation:'vertical'

                GridLayout:
                    height: dp(36)
                    size_hint_y:None
                    rows: 1
                    spacing:dp(8)
                    BoxLayout:
                        spacing: dp(8)
                        TextInput:
                            id: update_item_input
                            size_hint_x: 0.8
                            hint_text: 'new value'
                            multiline: False
                            padding: dp(10), dp(10), 0, 0
                        Button:
                            text: 'Search'
                            on_press:root.setRV()
                    Label:
                        text:'Text'
                        on_touch_down: root.doubleclick(*args)
                
                RecycleView:
                    id: rv1
                    data:[]
                    scroll_type: ['bars', 'content']
                    scroll_wheel_distance: dp(114)
                    bar_width: dp(10)
                    viewclass: 'MyLabel'
                    RVL:
    
<MyLabel@Label>:
    text:root.data.text
        


